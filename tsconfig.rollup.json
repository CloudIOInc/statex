{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es6"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/examples", "src/index.tsx"]
}
